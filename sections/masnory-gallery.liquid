<section class="centerText">
  <p>{{ section.settings.subheading }}</p>
  <h2 class="h1">{{ section.settings.title }}</h2>


</section>
<section class="masonry-gallery-section">
  <div class="img-grid-wrapper">
    {% for block in section.blocks %}
      <div class="{% if block.settings.style %}{{ block.settings.style }}{% endif %}">
        <img src="{{ block.settings.image | img_url: '720x' }}" alt="{{ block.settings.alt_text | escape }}" />
      </div>
    {% endfor %}
  </div>
</section>



{% schema %}
{
  "name": "Masonry Gallery",
   "class": "section Mgallery",
  "settings": [
        {
      "type": "inline_richtext",
      "id": "title",
      "default": "Heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Description",
      "label": "Description"
    },
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Gallery Image"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Image Style",
          "options": [
            { "value": "", "label": "Default" },
            { "value": "wide", "label": "Wide" },
            { "value": "tall", "label": "Tall" },
            { "value": "big", "label": "Big" }
          ]
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Gallery Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Masonry Gallery",
      "category": "Gallery"
    }
  ]
}
{% endschema %}
